@model IEnumerable<Slider>

@{
    ViewData["Title"] = "Slider";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<p>
    <a asp-action="Create" class="btn btn-outline-success">
        <i class="bi bi-person-plus-fill"></i> Yeni Slider Ekle
    </a>
</p>
<table id="datatablesSimple" class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            
            <td>
                    <img src="/img/slider/@Html.DisplayFor(modelItem => item.Image)" class="w-50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ID">Düzenle</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.ID">Detay</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ID">Sil</a>
                </td>
        </tr>
}
    </tbody>
</table>
